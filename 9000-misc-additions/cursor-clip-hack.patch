+            enable_cached = 2;
+        else if (e && (atoi(e) > 0))
+            enable_cached = 1;
+        else
+            enable_cached = 0;
+    }
+    return enable_cached;
+}
 #endif /* __WINE_WAYLANDDRV_H */
